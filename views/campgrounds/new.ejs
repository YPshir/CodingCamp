<%- include("../partials/header") %>

<div class="container" id="new">
    <div class="row">
        <h1 style="text-align: center;color:#E0FFFF;font-size: 80px">create a new Yelp</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group"><!--groups things together and also give them space-->
                    <input class="form-control" type="text" name="name" placeholder="Name Of The Site">
                </div>
                <!--<div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                </div> -->
                <div class="form-group">
                    <select class="form-control" name="price">
                        <option value="Free">Free</option>
                        <option value="Partial Payment">In-App Purchases</option>
                        <option value="Payment">Monthly/Yearly Subscription</option>
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image Url"><!--elements with class .form-control have a width of 100%.-->
                </div>
                <div class="form-group">
                    <!--<input class="form-control" type="text" name="description" placeholder="Description">-->
                    <textarea class="form-control" name="description" rows="5" placeholder="Description"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="link" placeholder="Paste a Link">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block"style="border: solid 1px #E0FFFF;color:#E0FFFF; font-weight:bold">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds" style="font-size:20px; font-weight:bold" >Go Back</a>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>