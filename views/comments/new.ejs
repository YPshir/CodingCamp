<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;color:#E0FFFF;font-size: 50px">Add New Comment to <%= campground.name %></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
                <div class="form-group"><!--groups things together and also give them space-->
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lgbtn-block" style="border: solid 1px #E0FFFF;color:#E0FFFF; font-weight:bold;">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds" style="font-size:20px; font-weight:bold">Go Back</a>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>